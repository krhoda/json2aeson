{
	"env": {
		"browser": true,
		"shared-node-browser": true,
		"es6": true,
		"jquery": true,
		"node": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 8,
		"ecmaFeatures": {
			"jsx": true
		},
		"sourceType": "module"
	},
	"plugins": ["react", "react-hooks"],
	"rules": {
		"arrow-body-style": [2, "always"],
		"no-class-assign": 2,
		"no-const-assign": 2,
		"no-this-before-super": 2,
		"no-var": 1,
		"object-shorthand": [2, "never"],
		"prefer-spread": 1,
		"prefer-reflect": 1,
		"require-yield": 2,
		"comma-dangle": [2, "never"],
		"no-cond-assign": [2, "except-parens"],
		"no-console": 1,
		"no-constant-condition": 1,
		"no-control-regex": 2,
		"no-dupe-args": 2,
		"no-dupe-keys": 2,
		"no-duplicate-case": 2,
		"no-empty-character-class": 2,
		"no-empty": 1,
		"no-ex-assign": 1,
		"no-extra-boolean-cast": 2,
		"no-extra-semi": 2,
		"no-func-assign": 1,
		"no-inner-declarations": [2, "both"],
		"no-invalid-regexp": 2,
		"no-irregular-whitespace": 2,
		"no-negated-in-lhs": 2,
		"no-obj-calls": 1,
		"no-regex-spaces": 2,
		"no-sparse-arrays": 2,
		"no-unreachable": 2,
		"use-isnan": 2,
		"valid-typeof": 2,
		"no-unexpected-multiline": 1,
		"consistent-return": 1,
		"default-case": 1,
		"dot-location": [2, "property"],
		"eqeqeq": [2, "smart"],
		"guard-for-in": 2,
		"no-alert": 1,
		"no-div-regex": 2,
		"no-else-return": 2,
		"no-labels": [2, {"allowLoop": true, "allowSwitch": true}],
		"no-eq-null": 1,
		"no-eval": 2,
		"no-fallthrough": 1,
		"no-floating-decimal": 2,
		"no-implied-eval": 2,
		"no-invalid-this": 1,
		"no-labels": 1,
		"no-lone-blocks": 2,
		"no-loop-func": 1,
		"no-new-func": 1,
		"no-new-wrappers": 1,
		"no-octal-escape": 1,
		"no-octal": 1,
		"no-process-env": 1,
		"no-proto": 1,
		"no-redeclare": [2, { "builtinGlobals": true }],
		"no-return-assign": [2, "except-parens"],
		"no-script-url": 1,
		"no-self-compare": 2,
		"no-sequences": 1,
		"no-throw-literal": 1,
		"no-unused-expressions": 1,
		"no-void": 2,
		"no-with": 2,
		"radix": 1,
		"no-catch-shadow": 1,
		"no-delete-var": 2,
		"no-label-var": 2,
		"no-shadow-restricted-names": 2,
		"no-shadow": [2, { "builtinGlobals": true, "hoist": "functions" }],
		"no-undef-init": 2,
		"no-undef": 2,
		"no-unused-vars": 2,
		"no-use-before-define": [
			2,
			{ "functions": false, "classes": true, "variables": false }
		],
		"callback-return": 2,
		"no-mixed-requires": 2,
		"no-new-require": 2,
		"array-bracket-spacing": [
			2,
			"never",
			{ "objectsInArrays": true, "arraysInArrays": true }
		],
		"brace-style": [2, "1tbs", {}],
		"comma-spacing": [2, { "after": true }],
		"comma-style": 2,
		"computed-property-spacing": [2, "never"],
		"consistent-this": [2, "self"],
		"indent": [2, "tab"],
		"key-spacing": [2, { "align": "value", "afterColon": true }],
		"new-parens": 2,
		"no-array-constructor": 2,
		"no-continue": 1,
		"no-lonely-if": 2,
		"no-mixed-spaces-and-tabs": [2, "smart-tabs"],
		"no-multiple-empty-lines": [2, { "max": 2 }],
		"no-nested-ternary": 2,
		"no-new-object": 2,
		"no-spaced-func": 2,
		"no-trailing-spaces": 2,
		"no-underscore-dangle": 2,
		"object-curly-spacing": [2, "never", {}],
		"operator-linebreak": [2, "after"],
		"quotes": [2, "single", { "allowTemplateLiterals": true }],
		"semi-spacing": [2, { "before": false, "after": true }],
		"semi": [2, "always"],
		"sort-vars": [2, { "ignoreCase": true }],
		"space-before-blocks": [2, "always"],
		"space-in-parens": [2, "never"],
		"space-infix-ops": 2,
		"keyword-spacing": [ 2, {"before": true, "after": true}],
		"space-unary-ops": [2, { "words": true }],
		"wrap-regex": 2,
		"arrow-parens": [2, "always"],
		"arrow-spacing": [2, { "before": true, "after": true }],
		"constructor-super": 2,
		"generator-star-spacing": [2, { "before": true }],
		"react/prop-types": 0,
		"react-hooks/rules-of-hooks": "error",
		"react-hooks/exhaustive-deps": "warn"
	}
}
